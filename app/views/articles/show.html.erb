

    <div class="article-page">
      <div class="icons">
        <%= link_to articles_path do %>
        <i class="fas fa-home"></i>
        <% end %>
        <%= link_to edit_article_path do %>
        <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to article_path(@article), method: :delete do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <div>
        <div class="title">
          <%= @article.title %>
        </div>
        <div class="content">
          <%= @article.content%>
        </div>
      </div>
    </div>










