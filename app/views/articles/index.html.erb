  <% counter = 1 %>
  <% @articles.each do |article| %>
    <div class="article-list">
      <div class="counter">
        <%= counter %>
      </div>
      <div>
        <div class="title">
          <%= link_to article.title, article %>
        </div>
        <div class="content">
          <%= article.content %>
        </div>
      </div>
    </div>
    <% counter += 1 %>
  <% end %>

